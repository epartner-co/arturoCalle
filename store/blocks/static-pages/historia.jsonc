    /*octabo recuadro*/
    "rich-text#recuadro8":{
        "props":{
            "blockClass":"recuadro--historia",
            "list":true,
            "text":"“Además de una celebración, estos primeros 50 años de historia en Colombia, son una oportunidad para volver a nuestros orígenes, recapitular nuestros logros y agradecer a las personas que con su talento y pasión han contribuido al crecimiento de esta empresa”"
        }  
     },
    "rich-text#contenido--vendran--al--menos--50--años--mas":{
        "props":{
           "blockClass":"contenido",
