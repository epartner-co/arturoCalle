  "flex-layout.col#hombre-deals4": {
    "children": [
      "image#hombre-deal4"
    ],
    "props": {
      "blockClass": "dealschild"
    }
  },
  "image#hombre-deal4": {
    "props": {
      "src": "assets/desk/hombre/camisetas.jpg",
      "maxHeight": "170px"
    }
  },
  "image#hombre-deal4M": {
    "props": {
      "src": "https://callearturop.vtexassets.com/arquivos/dep-hombre-zapatos.jpg"
    }
  },
  "rich-text#hombre-deal4": {
    "props": {
      "text": "CAMISETAS",
      "blockClass": "deals"
    }
  }
  //Fin columna 4
}
