{
  "store.custom#hombre": {
  "blocks": [
    "info-card#hombre-home",
    //"list-context.image-list#demo",
    /* You can make references to blocks defined in other files.
     * For example, `flex-layout.row#deals` is defined in the `deals.json` file. */
    "__fold__.experimentalLazyAssets",
    "flex-layout.row#deals",
    "rich-text#shelf-title",
    "flex-layout.row#shoes-hombre",
    "flex-layout.row#shirt-hombre",
    "flex-layout.row#hombre-banner",

    "flex-layout.row#product__tabs",

    "shelf#cats",
    "flex-layout.row#hombre-banner2",
    //"info-card#home",
    //"rich-text#question",
    //"rich-text#link",
    //"newsletter",
    "shelf#descubre-mas",
    "shelf#lo-mas-vendido"
  ]
},

"list-context.image-list#demo-hombre": {
  "children": ["slider-layout#demo-images-hombre"],
  "props": {
    "height": 720,
    "images": [
      {
        "image": "https://storecomponents.vteximg.com.br/arquivos/banner-principal.png",
        "mobileImage": "https://storecomponents.vteximg.com.br/arquivos/banner-principal-mobile.jpg"
      },
      {
        "image": "https://storecomponents.vteximg.com.br/arquivos/banner.jpg",
        "mobileImage": "https://storecomponents.vteximg.com.br/arquivos/banner-principal-mobile.jpg"
      }
    ]
  }
},
"slider-layout#demo-images-hombre": {
  "props": {
    "itemsPerPage": {
      "desktop": 1,
      "tablet": 1,
      "phone": 1
    },
    "infinite": true,
    "showNavigationArrows": "desktopOnly",
    "blockClass": "carousel"
  }
},

/*--------------------------------------------------------*/
/* Banner vitrina 1 --> CONOCE NUESTRA LINEA DE ZAPATOS  */
/*------------------------------------------------------*/
"rich-text#shelf-title": {
  "props": {
    "text": "CONOCE NUESTRA LINEA DE ZAPATOS",
    "blockClass": "shelfTitle"
  }
},
"flex-layout.row#shoes-hombre":{
  "props": {
    "blockClass": "more"
  },
  "children": [
    "flex-layout.col#shoes-hombre-left",
    "flex-layout.col#shoes-hombre-right"]
},
"flex-layout.col#shoes-hombre-left": {
  "props": {
    "width": "25%"
  },
  "children": [
    "info-card#col-shoes-hombre-left"
  ]
},
"flex-layout.col#shoes-hombre-right": {
  "props": {
    "width": "75%"
  },
  "children": [
    "shelf#shoes"
  ]
},
"info-card#col-shoes-hombre-left":{
  "props": {
    "id": "info-card-shoes",
    "isFullModeStyle": true,
    "fullWidth": true,
    //"textPosition": "left",
    "imageUrl": "assets/desk/hombre/banner-vitrina1.jpg",
    "callToActioMode": "none",
    //"headline": "Clearance Sale",
    //"callToActionText": "DISCOVER",
    //"callToActionUrl": "/sale/d",
    "blockClass": "info-card-shoes-left"//,
    //"textAlignment": "center"
  }
},
"shelf#shoes-hombre": {
  "blocks": ["product-summary.shelf"],
  "props": {
    "blockClass": "shoes",
    "orderBy":"OrderByTopSaleDESC",
    "paginationDotsVisibility": "desktopOnly",
    "productList":{
      "maxItems": 10,
      "itemsPerPage": 3,
      "minItemsPerPage": 1,
      "scroll": "BY_PAGE",
      "arrows": true,
      "showTitle": false
    }
  }
},


